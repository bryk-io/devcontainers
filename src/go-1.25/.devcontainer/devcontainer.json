{
  "name": "Go 1.25",
  // official list of images:
  // https://github.com/devcontainers/images
  "image": "mcr.microsoft.com/devcontainers/base:debian",
  "remoteUser": "vscode",
  "runArgs": [ "--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined" ],
  // official list of features:
  // http://github.com/devcontainers/features
  "features": {
    // standard features
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": "true",
      "configureZshAsDefaultShell": "true",
      "username": "vscode",
      "uid": "1000",
      "gid": "1000",
      "upgradePackages": "false"
    },
    "ghcr.io/devcontainers/features/go:1": {
      "version": "1.25.2",
      "golangciLintVersion": "2.5.0"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/kubectl-helm-minikube": {
      "version": "1.33",
      "helm": "latest",
      "minikube": "none"
    },
    // custom features
    "ghcr.io/bryk-io/devcontainers-features/buf:1.58.0": { },
    "ghcr.io/bryk-io/devcontainers-features/live-share:1": { },
    "ghcr.io/bryk-io/devcontainers-features/gqlgen:0.17.81": { },
    "ghcr.io/bryk-io/devcontainers-features/gqlgenc:0.31.0": { }
    // "ghcr.io/devcontainers/features/docker-in-docker:1": {
    //     "version": "latest",
    //     "moby": true
    // },
    // "ghcr.io/devcontainers/features/node:1": {
    //   "version": "lts"
    // },
  },
  "customizations": {
    "vscode": {
      "settings": {
        "go.useLanguageServer": true,
        "go.gopath": "/go",
        "protoc": {
          "options": [ "--proto_path=${workspaceRoot}/proto" ]
        }
      },
      "extensions": [
        "rangav.vscode-thunder-client",
        "spmeesseman.vscode-taskexplorer",
        "hbenl.vscode-test-explorer"
      ]
    }
  }
}
